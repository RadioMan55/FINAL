@model FinalProject.Models.CustomerSignIn
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>NMJ Foods</h1>
    <p class="lead">Fresh food. Fresh ideas.</p>
    <p><a href="#" class="btn btn-primary btn-lg">Login &raquo;</a></p>
</div>

<!-- Modal window -->
<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <form method="post" class="form-horizontal">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Employee Sign In</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <!-- CompanyName List -->
                    <div class="form-group">
                        @Html.LabelFor(m => m.CustomerId, "Employee Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control signin-form" })
                        </div>
                    </div>
                    <!-- Password -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter Password" })
                            @Html.ValidationMessageFor(model => Model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <!-- Submit button -->
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-default">Sign In</button>
                        </div>
                    </div>
                </div>
            </div>
        </form><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {

            $('.btn-primary').on('click', function () {
                $('#myModal').modal();
            });

        });
    </script>
}