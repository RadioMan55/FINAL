@using FinalProject.Models;
@model IEnumerable<Order>
@{
    ViewBag.Title = "Order Manager";
}

<h2>@ViewBag.Title</h2>

<table class="table table-hover table-responsive">
    <thead>
        <tr class="font-md">
            <th>Order Number</th>
            <th>Order Date</th>
            <th>Required Date</th>
            <th>Shipped Date</th>
            <th>Customer ID</th>
            <th>Sales Rep ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order o in Model)
        {
            <tr class="order-row" id="@o.OrderID">
                <td>@o.OrderID</td>
                <td>@o.OrderDate</td>
                <td>@o.RequiredDate</td>
                <td>@o.ShippedDate</td>
                <td>@o.CustomerID</td>
                <td>@o.EmployeeID</td>
            </tr>
        }
    </tbody>
</table>
